<!-- Introduction menu -->
<div class="w3-col l4">
    <!-- About Card -->
    <div class="w3-card w3-margin w3-margin-top">
      <div class="w3-container w3-padding w3-white">
        <h4><b>Scoicaru Andrei Alexandru</b></h4>
        <p>Just me, myself and I, exploring the universe of uknownment. I have a heart of love and a interest of lorem ipsum and mauris neque quam blog. I want to share my world with you.</p>
      </div>
    </div><hr>
    
    <!-- Posts -->
    <div class="w3-card w3-margin">
      <div class="w3-container w3-padding">
        <h4>Popular Posts</h4>
      </div>
      
      <ul class="w3-ul w3-hoverable w3-white">
      <% if (locals.posts && locals.posts.length > 0) { %>
        <% let i = 0; while (i < 4 && i < locals.posts.length) { %>
        <% if(locals.posts[i].isLiked) { %>
          <a href="/post/<%= posts[i].id %>">
            <li class="w3-padding-16 border-bottom">
              <span class="w3-large no-overflow"><b><%= locals.posts[i].title.substring(0, 40) + "..." %></b></span><br>
              <span class="no-overflow"><%= locals.posts[i].content.substring(0, 120) + "..." %></span>
            </li>
          </a>
        <% } i++; } %>
      <% } else { %>
        <li>No posts found.</li>
      <% } %>
      </ul>
      
    </div>
    <hr> 
   
    <!-- Labels / tags -->
    <div class="w3-card w3-margin">
      <div class="w3-container w3-padding">
        <h4>Tags</h4>
      </div>
      <div class="w3-container w3-white">
      <p><span class="w3-tag w3-black w3-margin-bottom">Programming</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Express.js</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Node.js</span>
        <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Javascript</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Politehnica</span><span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Games</span>
        <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Romanian</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Bucharest</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Student</span>
        <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Random</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Genius</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Lifestyle</span>
        <span class="w3-tag w3-light-grey w3-small w3-margin-bottom">Mewing</span> <span class="w3-tag w3-light-grey w3-small w3-margin-bottom"></span>
      </p>
      </div>
    </div>
    
