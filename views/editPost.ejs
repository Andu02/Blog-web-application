<%- include ("partials/header") %>

<div class="w3-col l8 s12">
  <!-- Blog entry -->
  <div class="w3-card-4 w3-margin w3-white">
    <div class="w3-container" style="padding: 0">
      <div class="w3-container w3-padding">
        <h1>Edit Post</h1>
        <form action="/post/edit/<%= post.id %>" method="POST">
          <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title"name="title" class="w3-input w3-border" value="<%= post.title %>" required/>
          </div>
          <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="content" class="w3-input w3-border resizable-auto" required><%= post.content %></textarea>
          </div>
          <% if(locals.errors) { %> 
            <% errors.forEach(error => { %>
              <p class="error"><%= error %></p>
            <% })} %>
          <p>
            <button style="font-weight: bold" type="submit" class="w3-button w3-padding-large w3-white w3-border">EDIT POST</button>
          </p>
        </form>
      </div>
    </div>

    
  </div>

  <div class="w3-container">
    <h3 class="w3-margin-top">
      <b>Comments Â </b><span class="w3-tag"><%= post.numberComments %></span>
    </h3>
    <hr/>
    <!-- END BLOG ENTRY -->

    <!-- Comment section -->
    <%- include ("partials/commentSection") %>
    <!-- COMMENT SECTION END -->
  </div>

</div>

<!-- Scripts-->
<script src="/scripts/textAreaResizeScript.js"></script>

<%- include ("partials/rightPanel") %> <%- include ("partials/footer") %>
